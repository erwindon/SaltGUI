{
  "name": "saltgui-test",
  "description": "Code linting and testing package for SaltGUI",
  "author": "Martijn Jacobs",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "chai": "^4.1.2",
    "css-loader": "^2.1.0",
    "eslint": "^5.3.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "nightmare": "^3.0.1",
    "node-sass": "^4.11.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "//": "see https://eslint.org/docs/rules/ for details",
      "semi": 2,
      "no-undef": 0,
      "no-unused-vars": 0,
      "no-console": 0,
      "indent": [
        "error",
        2
      ],
      "no-irregular-whitespace": 2,
      "no-whitespace-before-property": 2,
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "no-useless-escape": 0,
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-var": 2,
      "prefer-const": 2
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "clean": "rimraf saltgui/static/saltgui.bundle.js",
    "bundle": "webpack",
    "jslint": "eslint saltgui/static/scripts tests/",
    "stylelint": "stylelint 'saltgui/static/stylesheets/*.css'",
    "wait-for-docker": "node tests/helpers/wait-for-docker.js",
    "test": "mocha --trace-warnings --check-leaks --reporter spec tests/unit/ tests/functional/"
  }
}
