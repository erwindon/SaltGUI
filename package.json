{
  "name": "saltgui-test",
  "description": "Code linting and testing package for SaltGUI",
  "author": "Martijn Jacobs",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.3.0",
    "mocha": "^5.2.0",
    "nightmare": "^3.0.1",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "//": "see https://eslint.org/docs/rules/ for details",
      "semi": 2,
      "no-undef": 0,
      "no-unused-vars": 0,
      "no-console": 0,
      "indent": ["error", 2],
      "no-irregular-whitespace": 2,
      "no-whitespace-before-property": 2,
      "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
      "no-useless-escape": 0,
      "no-constant-condition": ["error", { "checkLoops": false }]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "jslint": "eslint saltgui/static/scripts  tests/",
    "stylelint": "stylelint 'saltgui/static/stylesheets/*.css'",
    "wait-for-docker": "node tests/helpers/wait-for-docker.js",
    "test": "mocha --trace-warnings --reporter spec tests/unit/ tests/functional/"
  }
}
